#!/bin/sh

keep=no

for option; do
	case "$option" in
		--keep)
			keep=yes
			;;
	esac
done

EXEEXT=@EXEEXT@
VERSION=@GIT_HEAD_VERSION@
CC="@CC@"
CFLAGS="--std=gnu99"
srcdir="@srcdir@"

if [ $keep = "yes" ]; then
	OUTDIR="opencl_test.$VERSION"
	mkdir "$OUTDIR" || exit 1
else
	if test "x$TMPDIR" = "x"; then
		TMPDIR=/tmp
	fi
	OUTDIR=`mktemp -d $TMPDIR/ppcg.XXXXXXXXXX` || exit 1
fi

for i in $srcdir/tests/*.c; do
	echo $i
	name=`basename $i`
	name="${name%.c}"
	out_c="${OUTDIR}/$name.ppcg.c"
	out="${OUTDIR}/$name.ppcg$EXEEXT"
	./ppcg$EXEEXT --target=opencl --opencl-no-use-gpu $i -o "$out_c" || exit
	$CC $CFLAGS "$srcdir/ocl_utilities.c" -lOpenCL "$out_c" -o "$out" || \
		exit
	$out || exit
done

if [ $keep = "no" ]; then
	rm -r "${OUTDIR}"
fi
